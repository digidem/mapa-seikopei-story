{
  "name": "mapa-waorani",
  "version": "1.0.0",
  "description": "waorani map",
  "main": "index.js",
  "scripts": {
    "test": "standard",
    "build": "mkdirp dist && npm run build:js && npm run build:static && workbox generate:sw",
    "build:js": "NODE_ENV=production browserify -p common-shakeify -p browser-pack-flat/plugin src/index.js > dist/bundle.js",
    "build:static": "copyup 'static/**/*' dist && copyfiles data.json dist",
    "start": "budo src/index.js:bundle.js -d static",
    "deploy": "npm run build && gh-pages -d dist"
  },
  "browserify": {
    "transform": [
      [
        "sheetify/transform",
        {
          "u": "sheetify-nested"
        }
      ],
      [
        "unassertify",
        {
          "global": true
        }
      ],
      [
        "envify",
        {
          "global": true
        }
      ],
      "brfs",
      "yo-yoify",
      "es2020",
      [
        "uglifyify",
        {
          "global": true
        }
      ]
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/digidem/mapa-waorani.git"
  },
  "keywords": [
    "map",
    "waorani"
  ],
  "author": "Digital Democracy",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/digidem/mapa-waorani/issues"
  },
  "homepage": "https://github.com/digidem/mapa-waorani#readme",
  "dependencies": {
    "@digidem/attribution-control": "^1.0.0",
    "@vimeo/player": "^2.6.1",
    "alianza-elements": "^3.0.0",
    "debug": "^3.1.0",
    "lozad": "^1.4.0",
    "mapbox-gl": "^0.45.0",
    "mapbox-gl-toggle-control": "^1.0.5",
    "micromatch": "^3.1.10",
    "nanocomponent": "^6.5.2",
    "nanohtml": "^1.2.4",
    "on-intersect": "^2.0.0",
    "sheetify": "^6.1.1",
    "sheetify-nested": "^1.0.2",
    "workbox-cli": "^2.1.3",
    "xhr": "^2.4.0",
    "yo-yo": "^1.4.1"
  },
  "devDependencies": {
    "brfs": "^1.6.1",
    "browser-pack-flat": "^3.0.9",
    "browserify": "^14.4.0",
    "budo": "^10.0.3",
    "common-shakeify": "^0.4.6",
    "copyfiles": "^1.2.0",
    "envify": "^4.1.0",
    "es2020": "^1.1.9",
    "gh-pages": "^1.0.0",
    "mkdirp": "^0.5.1",
    "sheetify": "^6.1.1",
    "sheetify-nested": "^1.0.2",
    "standard": "^10.0.3",
    "uglify-js": "^3.3.27",
    "uglifyify": "github:kristoferjoseph/uglifyify#5881f398ec8b6b5cee2f65e0ee19480bd2db92b1",
    "unassertify": "^2.1.1",
    "yo-yoify": "^3.7.3"
  }
}
